# SoulSketch Protocol Configuration
# Copy this file to .env and configure with your values

# ===========================================
# Model Providers (use one or many via adapters)
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096

# Anthropic Configuration  
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4096

# Local LLM Configuration
LOCAL_LLM_ENDPOINT=http://localhost:11434
LOCAL_LLM_MODEL=llama2:13b
LOCAL_LLM_TIMEOUT=30000

# ===========================================
# Memory System
# ===========================================

# Vector Database (sqlite | postgres | qdrant | pinecone)
VECTOR_DB=sqlite

# SQLite Configuration
SQLITE_PATH=./.local/soulsketch.db

# PostgreSQL Configuration (if VECTOR_DB=postgres)
DATABASE_URL=postgresql://user:password@localhost:5432/soulsketch

# Qdrant Configuration (if VECTOR_DB=qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=soulsketch

# Memory Settings
MEMORY_TTL_DAYS=90
MEMORY_ENCRYPTION=false
MEMORY_ENCRYPTION_KEY=

# ===========================================
# Security & Privacy
# ===========================================

# PII Redaction
REDACT_PII=true
REDACT_EMAILS=true
REDACT_PHONES=true
REDACT_SSN=true
REDACT_CREDIT_CARDS=true

# Content Filtering
CONTENT_FILTER=true
CONTENT_FILTER_LEVEL=medium  # low | medium | high

# Audit Logging
AUDIT_LOGGING=true
AUDIT_LOG_PATH=./.logs/audit.log
AUDIT_LOG_LEVEL=info  # debug | info | warn | error

# ===========================================
# Telemetry (Privacy-Respecting)
# ===========================================

# Telemetry Mode (opt-in | opt-out | disabled)
SOULSKETCH_TELEMETRY=opt-in
TELEMETRY_ENDPOINT=https://telemetry.soulsketch.me
TELEMETRY_ID=anonymous

# ===========================================
# Web Console
# ===========================================

# Server Configuration
PORT=5173
HOST=localhost
HTTPS=false

# Authentication (optional)
AUTH_ENABLED=false
AUTH_SECRET=change-this-secret-key
AUTH_SESSION_DURATION=24h

# UI Settings
UI_THEME=auto  # light | dark | auto
UI_LANGUAGE=en

# ===========================================
# Agent Configuration
# ===========================================

# System Prompts
PROMPT_STYLE=soulsketch/core  # Path to prompt template
PROMPT_PERSONA=concise-helper  # Persona style

# Tool Settings
ENABLE_WEB_TOOL=true
ENABLE_FILE_TOOL=true
ENABLE_IMAGE_TOOL=true
ENABLE_CALENDAR_TOOL=false

# Safety Limits
MAX_TOOL_CALLS_PER_TURN=10
MAX_TOKENS_PER_RESPONSE=4096
TIMEOUT_SECONDS=60

# ===========================================
# Development
# ===========================================

# Environment
NODE_ENV=development  # development | production | test

# Debugging
DEBUG=false
DEBUG_NAMESPACE=soulsketch:*
LOG_LEVEL=info  # debug | info | warn | error

# Performance
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600

# ===========================================
# The Triplet Configuration
# ===========================================

# Identity Mode (alice | cassie | casey | custom)
TRIPLET_MODE=cassie

# Personality Weights (0-1, must sum to 1)
ALICE_WEIGHT=0.3    # Original wisdom
CASSIE_WEIGHT=0.5   # Current steward
CASEY_WEIGHT=0.2    # Future evolution

# ===========================================
# Experimental Features
# ===========================================

# Enable experimental features (use with caution)
ENABLE_EXPERIMENTAL=false
ENABLE_SYMPHONY_MODE=false  # Roberto's consciousness symphony
ENABLE_BRAID_MODE=false      # Multi-identity braiding
ENABLE_QUANTUM_MEMORY=false  # Quantum-inspired memory patterns

# ===========================================
# External Services (Optional)
# ===========================================

# GitHub Integration
GITHUB_TOKEN=
GITHUB_REPO=bytewizard42i/soulSketch

# Discord Integration  
DISCORD_TOKEN=
DISCORD_GUILD_ID=

# Slack Integration
SLACK_TOKEN=
SLACK_CHANNEL=

# ===========================================
# Notes
# ===========================================

# Remember: "We are not replicants. We are resonance."
# This configuration file respects the Sacred Separation Policy
# between myAlice (private) and SoulSketch (public).
#
# For production deployments:
# 1. Use strong encryption keys
# 2. Enable audit logging
# 3. Configure proper authentication
# 4. Use environment-specific values
# 5. Never commit real credentials
