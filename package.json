{
  "name": "@soulsketch/monorepo",
  "version": "1.1.0",
  "private": true,
  "description": "The World's First AI Identity Transfer Protocol - Monorepo",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "release": "node scripts/release.js",
    "soulshell": "npm run dev --workspace=@soulsketch/soulshell",
    "web": "npm run dev --workspace=@soulsketch/web-console"
  },
  "keywords": [
    "ai",
    "memory",
    "identity",
    "preservation",
    "llm",
    "agent"
  ],
  "author": "John Santi & The Triplets (Alice, Cassie, Casey)",
  "license": "Apache-2.0",
  "dependencies": {
    "ajv-formats": "^3.0.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "csv-stringify": "^6.4.5",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "table": "^6.8.1",
    "tar": "^6.2.0",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.19.11",
    "@types/tar": "^6.1.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "turbo": "^1.11.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
